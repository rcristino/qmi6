{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch qmi6",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/qmi6",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: build",
            "miDebuggerPath": "/usr/bin/gdb", // Adjust this path if using a different debugger
            "miDebuggerArgs": "",
            "logging": {
                "engineLogging": false
            }
        }
    ]
}